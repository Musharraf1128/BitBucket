# Environment Variables Template
# Copy this file to .env and fill in your values

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-256-bits-recommended

# Database Configuration (only if not using Docker)
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration (only if not using Docker)
REDIS_HOST=localhost
REDIS_PASSWORD=

# Cache Type (set to 'redis' to enable caching, 'none' to disable)
CACHE_TYPE=redis

# File Upload Directory
FILE_UPLOAD_DIR=/app/uploads

# Email Configuration (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
